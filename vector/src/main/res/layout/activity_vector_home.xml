<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="#FFFFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/VectorToolbarStyle"/>

        <im.vector.view.VectorPendingCallView
            android:id="@+id/listView_pending_callview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <!-- The main content view -->
        <RelativeLayout
            android:id="@+id/roomContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="org.matrix.vector.activity.VectorHomeActivity"
            android:layout_weight="40">

            <ProgressBar
                android:id="@+id/home_recents_sync_in_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/vector_green_color"
                android:indeterminate="true"/>

            <FrameLayout
                android:id="@+id/home_recents_list_anchor"
                android:layout_below="@+id/home_recents_sync_in_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/listView_create_room_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/floating_action_button_margin"
                android:layout_marginBottom="@dimen/floating_action_button_margin"
                app:backgroundTint="@color/vector_fuchsia_color"
                android:src="@drawable/ic_add_white"
                app:borderWidth="0dp"
                app:elevation="4dp"/>

            <FrameLayout
                android:id="@+id/listView_spinner_views"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/chat_encoding_background">
                <ProgressBar
                    android:id="@+id/listView_spinner"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/spaceContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="org.matrix.vector.activity.VectorHomeActivity"
            android:visibility="gone"
            android:layout_weight="40">

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:requiresFadingEdge="horizontal|vertical"></WebView>

            <ProgressBar
                android:id="@+id/webViewProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/vector_light_gray_color"
            android:gravity="bottom"
            android:showDividers="middle|beginning|end"
            android:layout_weight="0"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/messageItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/vector_light_gray_color"
                android:layout_weight="1"
                android:onClick="onClickBottomButton"
                android:layout_marginLeft="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/message"
                    android:id="@+id/imageView"/>

                <TextView
                    android:text="消息"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textStyle="normal|bold"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/vector_actionbar_background" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/messageItem2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/vector_light_gray_color"
                android:layout_weight="2"
                android:onClick="onClickBottomButton">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/explore_noforcus"
                    android:id="@+id/imageView2"/>

                <TextView
                    android:text="发现"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textStyle="normal|bold"
                    android:gravity="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/messageItem3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/vector_light_gray_color"
                android:layout_weight="1"
                android:onClick="onClickBottomButton"
                android:layout_marginRight="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/space_noforcus"
                    android:id="@+id/imageView3"/>

                <TextView
                    android:text="空间"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textStyle="normal|bold"
                    android:gravity="center"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:background="#FFF"
        android:fitsSystemWindows="true"
        app:itemIconTint="@color/vector_4d_gray"
        app:theme="@style/NavigationViewStyle"
        app:headerLayout="@layout/vector_home_menu_header"
        app:menu="@menu/vector_home_sliding_menu">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
