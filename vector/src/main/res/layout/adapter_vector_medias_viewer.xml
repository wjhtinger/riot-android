<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <WebView android:id="@+id/media_slider_image_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"/>

    <RelativeLayout
        android:id="@+id/media_slider_videolayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView android:id="@+id/media_slider_videoview"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView android:id="@+id/media_slider_video_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000" />

        <ImageView android:id="@+id/media_slider_video_playView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_material_play_circle"
            android:background="#00777777" />

        <RelativeLayout
            android:id="@+id/bottom_media_controller"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/media_slider_video_playView"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="40dp"
            android:background="#40000000">

            <TextView
                android:id="@+id/text_currentpostion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/text_durtionposition"
                android:layout_toRightOf="@+id/text_currentpostion"
                android:background="@null"
                android:max="100"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:progressDrawable="@drawable/jc_seek_progress"
                android:thumb="@drawable/jc_seek_thumb" />

            <TextView
                android:id="@+id/text_durtionposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>


    <org.matrix.androidsdk.view.PieFractionView
        android:id="@+id/media_slider_piechart"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.2"
        android:layout_width="160dp"
        android:layout_height="160dp"/>
</RelativeLayout>